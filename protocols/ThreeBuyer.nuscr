/**
 * Taken from [MSCS16] Global Progress for Dynamically Interleaved Sessions
 */

module ThreeBuyer;


global protocol ThreeBuyer(role A, role B, role S)
{
  empty1(number) from A to S;
  empty2(number) from S to A;
  empty3(number) from S to B;
  empty4(number) from A to B;

  choice at B
  {
    ok(number) from B to A;
    ok(number) from B to S;
    empty5(number) from S to B;
  }
  or
  {
    quit() from B to A;
    quit() from B to S;
  }
}