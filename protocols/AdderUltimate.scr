module Adder;

global protocol Adder(role Client, role Svr, role A) {

    choice at Client {
        ADD(number, number)   from Client to Svr;
        choice at Svr{
            Hi1() from Svr to A;
            choice at Client {
              Yes() from Client to Svr;
              choice at Svr {
                Hi1() from Svr to A;
              } or {
                Hi3() from Svr to A;
               }
             } or {
               No() from Client to Svr;
               Hi2() from Svr to A;
             } or {
               OK() from Client to Svr;
               Hi4() from Svr to A;
             }
        } or {
            Hi2() from Svr to A;
            choice at Client {
              Yes() from Client to Svr;
              choice at Svr {
                Hi1() from Svr to A;
              } or {
                Hi3() from Svr to A;
               }
             } or {
               No() from Client to Svr;
               Hi2() from Svr to A;
             } or {
               OK() from Client to Svr;
               Hi4() from Svr to A;
             }
        }
    } or {
        QUIT()                from Client to Svr;
        Hi3() from Svr to A;
        choice at Client {
              Yes() from Client to Svr;
              choice at Svr {
                Hi1() from Svr to A;
              } or {
                Hi3() from Svr to A;
               }
             } or {
               No() from Client to Svr;
               Hi2() from Svr to A;
             } or {
               OK() from Client to Svr;
               Hi4() from Svr to A;
             }
    } or {
        Sub() from Client to Svr;
        Hi4() from Svr to A;
        choice at Client {
              Yes() from Client to Svr;
              choice at Svr {
                Hi1() from Svr to A;
              } or {
                Hi3() from Svr to A;
               }
             } or {
               No() from Client to Svr;
               Hi2() from Svr to A;
             } or {
               OK() from Client to Svr;
               Hi4() from Svr to A;
             }
    }

}